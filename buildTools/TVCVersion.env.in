TVCVersionGetMajor () {
    echo "@TVC_VERSION_MAJOR@"
}
TVCVersionGetMinor() {
    echo "@TVC_VERSION_MINOR@"
}
TVCVersionGetRelease() {
    echo "@TVC_VERSION_RELEASE@"
}
TVCVersionGetGitHash() {
    echo "@TVC_VERSION_GITHASH@"
}
TVCVersionGetGitPath() {
    echo "@TVC_VERSION_GITPATH@"
}
TVCVersionGetBuildNum() {
    echo "@TVC_VERSION_BUILDNUM@"
}
TVCVersionGetBuildTag() {
    echo "@TVC_VERSION_BUILDTAG@"
}
TVCVersionGetBuildHost() {
    echo "@TVC_VERSION_BUILDHOST@"
}

TVCVersionGetFullVersion() {
    P=$1
    P=${P-"@CMAKE_PROJECT_NAME@"}
    echo -ne "$P (@TVC_VERSION_MAJOR@.@TVC_VERSION_MINOR@.@TVC_VERSION_RELEASE@)\n"
    echo -ne "Build: @TVC_VERSION_BUILDTAG@ (@TVC_VERSION_BUILDNUM@)\n"
    echo -ne "Source: @TVC_VERSION_GITPATH@ (@TVC_VERSION_GITHASH@)\n"
    echo -ne "Copyright 2011-2015 Ion Torrent Systems, Inc.\n";
}
